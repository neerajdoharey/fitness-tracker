<div class="auth-content">
  <p class="text-xs-center">LOGIN TO CONTINUE</p>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: "form-control underlined", placeholder: "Your email address" %>
      </div>
    </div>
    <div class="form-group">
      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control underlined",  placeholder: "Your password" %>
      </div>
    </div>
    <div class="form-group">
      <% if devise_mapping.rememberable? -%>
        <%= f.label :remember_me, for: "remember" do %>
          <%= f.check_box :remember_me, class: "checkbox",id: "remember" %>
          <span>Remember me</span>
        <% end %>
      <% end -%>
      <%= link_to "Forgot password?", new_password_path(resource_name) ,class: "forgot-btn pull-right"%>
    </div>
    <div class="form-group">
      <div class="actions">
        <%= f.submit "Log in", class: "btn btn-block btn-primary" %>
      </div>
    <div class="form-group">
      <p class="text-muted text-xs-center">Do not have an account? <%= link_to "Sign Up!", new_registration_path(resource_name) %></p>
    </div>
  <% end %>
</div>
