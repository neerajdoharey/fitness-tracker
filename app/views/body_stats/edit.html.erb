            <%= f.label :weight , :class => 'col-sm-4 form-control-label text-xs-center' do %>
              <%= image_tag("weight.jpg", alt: "Weight") %>
              Weight:
            <% end %>
            <div class="col-sm-8"><%= f.text_field :weight , :class => 'form-control boxed',placeholder: "Weight (kg)" %></div>
          </div>
        </div>
