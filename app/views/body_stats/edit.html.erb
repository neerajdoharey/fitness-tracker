            <%= f.label :body_fat , :class => 'col-sm-4 form-control-label text-xs-center' do %>
              <%= image_tag("body_fat.jpg", alt: "Body Fat" ,size: "90x90") %>
              Body Fat:
            <% end %>
            <div class="col-sm-8"><%= f.text_field :body_fat , :class => 'form-control boxed',placeholder: "Body Fat (%)" %></div>
          </div>
        </div>
      </div>
