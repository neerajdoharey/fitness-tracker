<div class="items-list-page">
  <div class="title-search-block">
    <div class="title-block">
      <div class="row">
        <div class="col-md-7">
          <h3 class="title">
            Measurment History
            <%= link_to "Add Measurment", new_body_stat_path, class: "btn btn-primary btn-sm rounded-s" %>

            <div class="action dropdown">
              <button class="btn  btn-sm rounded-s btn-secondary dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              More actions...
              </button>
              <div class="dropdown-menu" aria-labelledby="dropdownMenu1">
                <!-- <a class="dropdown-item" href="#"><i class="fa fa-pencil-square-o icon"></i>Mark as a draft</a> -->
                <a class="dropdown-item" href="#" data-toggle="modal" data-target="#confirm-modal"><i class="fa fa-close icon"></i>Delete</a>
              </div>
            </div>
          </h3>
          <p class="title-description"> Body parts - e.g. Chest, Arms, Waist, etc... </p>
        </div>
      </div>
    </div>
    <div class="items-search">
      <form class="form-inline">
        <div class="input-group"> <input type="text" class="form-control boxed rounded-s" placeholder="Search for..."> <span class="input-group-btn">
          <button class="btn btn-secondary rounded-s" type="button">
          <i class="fa fa-search"></i>
          </button>
          </span>
        </div>
      </form>
    </div>
  </div>
  <div class="card items">
    <ul class="item-list striped">
      <li class="item item-list-header hidden-sm-down">
        <div class="item-row">
          <div class="item-col fixed item-col-check"> <label class="item-check" id="select-all-items">
            <input type="checkbox" class="checkbox">
            <span></span>
            </label>
          </div>
          <div class="item-col item-col-header item-col-author">
            <div class="no-overflow"> <span>Weight<br>(<%= weight_unit %>)</span> </div>
          </div>
          <div class="item-col item-col-header item-col-author">
            <div class="no-overflow"> <span>Height<br>(<%= length_unit %>)</span> </div>
          </div>
          <div class="item-col item-col-header item-col-author">
            <div class="no-overflow"> <span>Bodyfat<br>(%)</span> </div>
          </div>
          <div class="item-col item-col-header item-col-author">
            <div class="no-overflow"> <span>Chest<br>(<%= length_unit %>)</span> </div>
          </div>
          <div class="item-col item-col-header item-col-author">
            <div class="no-overflow"> <span>Arms<br>(<%= length_unit %>)</span> </div>
          </div>
          <div class="item-col item-col-header item-col-author">
            <div class="no-overflow"> <span>Waist<br>(<%= length_unit %>)</span> </div>
          </div>
          <div class="item-col item-col-header item-col-author">
            <div class="no-overflow"> <span>Thighs<br>(<%= length_unit %>)</span> </div>
          </div>
          <!-- <div class="item-col item-col-header item-col-author">
            <div class="no-overflow"> <span>Calves<br>(Cm)</span> </div>
          </div> -->
          <div class="item-col item-col-header item-col-author">
            <div class="no-overflow"> <span>Forearms<br>(<%= length_unit %>)</span> </div>
          </div>
          <div class="item-col item-col-header item-col-author">
            <div class="no-overflow"> <span>Shoulders<br>(<%= length_unit %>)</span> </div>
          </div>
          <div class="item-col item-col-header item-col-date">
            <div> <span>Published<br>&nbsp;</span> </div>
          </div>
          <div class="item-col item-col-header fixed item-col-actions-dropdown"> </div>
        </div>
      </li>
      <% @body_stats.each do |body_stat| %>
        <li class="item">
          <div class="item-row">
            <div class="item-col fixed item-col-check"> <label class="item-check" id="select-all-items">
              <input type="checkbox" class="checkbox">
              <span></span>
              </label>
            </div>
            <div class="item-col item-col-author">
              <div class="item-heading">Weight</div>
              <div class="no-overflow"> <%= body_stat.weight %> </div>
            </div>
            <div class="item-col item-col-author">
              <div class="item-heading">Height</div>
              <div class="no-overflow"> <%= body_stat.height %> </div>
            </div>
            <div class="item-col item-col-author">
              <div class="item-heading">Bodyfat</div>
              <div class="no-overflow"> <%= body_stat.body_fat %> </div>
            </div>
            <div class="item-col item-col-author">
              <div class="item-heading">Chest</div>
              <div class="no-overflow"> <%= body_stat.chest %> </div>
            </div>
            <div class="item-col item-col-author">
              <div class="item-heading">Arms</div>
              <div class="no-overflow"> <%= body_stat.arms %> </div>
            </div>
            <div class="item-col item-col-author">
              <div class="item-heading">Waist</div>
              <div class="no-overflow"> <%= body_stat.waist %> </div>
            </div>
            <div class="item-col item-col-author">
              <div class="item-heading">Thighs</div>
              <div class="no-overflow"> <%= body_stat.thighs %> </div>
            </div>
            <!-- <div class="item-col item-col-author">
              <div class="item-heading">Calves</div>
              <div class="no-overflow"> <%= body_stat.calves %> </div>
            </div> -->
            <div class="item-col item-col-author">
              <div class="item-heading">Forearms</div>
              <div class="no-overflow"> <%= body_stat.forearms %> </div>
            </div>
            <div class="item-col item-col-author">
              <div class="item-heading">Shoulders</div>
              <div class="no-overflow"> <%= body_stat.shoulders %> </div>
            </div>
            <div class="item-col item-col-date">
              <div class="item-heading">Published</div>
              <div class="no-overflow"> <%= body_stat.created_at.strftime("%d %b %Y") %> </div>
            </div>
            <div class="item-col fixed item-col-actions-dropdown">
              <div class="item-actions-dropdown">
                <a class="item-actions-toggle-btn"> <span class="inactive">
                <i class="fa fa-cog"></i>
                </span> <span class="active">
                <i class="fa fa-chevron-circle-right"></i>
                </span> </a>
                <div class="item-actions-block">
                  <ul class="item-actions-list">
                    <li>
                        <%= link_to body_stat_path(body_stat) , method: :delete ,data: {confirm: "Are you sure"} , class: "remove" do %>
                        <i class="fa fa-trash-o "></i>
                        <% end %>
                      <!-- <a class="remove" href="#" data-toggle="modal" data-target="#confirm-modal"> <i class="fa fa-trash-o "></i> </a> -->
                    </li>
                    <li>

                      <%= link_to edit_body_stat_path(body_stat) , class: "edit" do %>
                      <i class="fa fa-pencil"></i>
                      <% end %>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>

  <nav class="text-xs-right">
    <%= will_paginate @body_stats%>
  </nav>
</div>
