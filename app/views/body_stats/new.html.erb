            <%= f.label :hips , :class => 'col-sm-4 form-control-label text-xs-center' do %>
              <%= image_tag("hip.jpg", alt: "Hips") %>
              <p>Hips (<%= length_unit %>)</p>
            <% end %>
            <div class="col-sm-8"><%= f.text_field :hips , :class => 'form-control boxed',placeholder: "Hips (#{length_unit})" %></div>
          </div>
        </div>
        <div class="col-sm-4">
          <div class="form-group row">
            <%= f.label :neck , :class => 'col-sm-4 form-control-label text-xs-center' do %>
              <%= image_tag("neck.jpg", alt: "Arms") %>
              <p>Neck (<%=  length_unit %>)</p>
            <% end %>
            <div class="col-sm-8"><%= f.text_field :neck , :class => 'form-control boxed',placeholder: "Neck (#{length_unit})" %></div>
          </div>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-10 ">
          <%= f.submit :class => "btn btn-primary" %>
           <!-- <button type="submit" class="btn btn-primary">
          Submit
          </button> -->
        </div>
      </div>
    </div>
  <% end %>
</div>
