            <% end %>
            <div class="col-sm-8"><%= f.text_field :shoulders , :class => 'form-control boxed',placeholder: "Shoulders (#{length_unit})" %></div>
          </div>
        </div>
        <div class="col-sm-4">
          <div class="form-group row">
            <%= f.label :thighs , :class => 'col-sm-4 form-control-label text-xs-center' do %>
              <%= image_tag("thigh.jpg", alt: "Thighs") %>
              <p>Thighs (<%= length_unit %>)</p>
            <% end %>
            <div class="col-sm-8"><%= f.text_field :thighs , :class => 'form-control boxed',placeholder: "Thighs (#{length_unit})" %></div>
          </div>
        </div>
      </div>
      <div class="row">
