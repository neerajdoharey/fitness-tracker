<div class="item-editor-page">
  <div class="title-block">
    <h3 class="title">
      Add new measurements <span class="sparkline bar" data-type="bar"></span>
    </h3>
  </div>
  <%= render "shared/errors", obj: @body_stat %>
  <% if @body_stat_last %>
    <% body_stat = @body_stat_last  %>
  <% else %>
    <% body_stat = @body_stat  %>
  <% end %>
  <%= form_for @body_stat do |f| %>
    <div class="card card-block body_stats">
      <div class="row">
        <div class="col-sm-4">
          <div class="form-group row">
            <%= f.label :weight , :class => 'col-sm-4 form-control-label text-xs-center' do %>
              <%= image_tag("weight.jpg", alt: "Weight") %>
              <p>Weight (<%= weight_unit %>)</p>
            <% end %>
            <div class="col-sm-8"><%= f.text_field :weight , :class => 'form-control boxed',placeholder: "Weight (#{weight_unit})" %></div>
          </div>
        </div>
        <div class="col-sm-4">
          <div class="form-group row">
            <%= f.label :height , :class => 'col-sm-4 form-control-label text-xs-center' do %>
              <%= image_tag("front_lat_spread.jpg", alt: "Height") %>
              <p>Height (<%= length_unit %>)</p>
            <% end %>
            <div class="col-sm-8"><%= f.text_field :height , :class => 'form-control boxed',placeholder: "Height (#{length_unit})" %></div>
          </div>
        </div>
        <div class="col-sm-4">
          <div class="form-group row">
            <%= f.label :body_fat , :class => 'col-sm-4 form-control-label text-xs-center' do %>
              <%= image_tag("body_fat.jpg", alt: "Body Fat" ,size: "90x90") %>
              <p>Body Fat (%)</p>
            <% end %>
            <div class="col-sm-8"><%= f.text_field :body_fat , :class => 'form-control boxed',placeholder: "Body Fat (%)" %></div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-4">
          <div class="form-group row">
            <%= f.label :waist , :class => 'col-sm-4 form-control-label text-xs-center' do %>
              <%= image_tag("waist.jpg", alt: "waist") %>
              <p>Waist (<%= length_unit %>)</p>
            <% end %>
            <div class="col-sm-8"><%= f.text_field :waist , :class => 'form-control boxed',placeholder: "Waist (#{length_unit})" %></div>
          </div>
        </div>
        <div class="col-sm-4">
          <div class="form-group row">
            <%= f.label :chest , :class => 'col-sm-4 form-control-label text-xs-center' do %>
              <%= image_tag("chest.jpg", alt: "Chest") %>
              <p>Chest (<%= length_unit %>)</p>
            <% end %>
            <div class="col-sm-8"><%= f.text_field :chest , :class => 'form-control boxed',placeholder: "Chest (#{length_unit})" %></div>
          </div>
        </div>
        <div class="col-sm-4">
          <div class="form-group row">
            <%= f.label :arms , :class => 'col-sm-4 form-control-label text-xs-center' do %>
              <%= image_tag("arm.jpg", alt: "Arms") %>
              <p>Arms (<%= length_unit %>)</p>
            <% end %>
            <div class="col-sm-8"><%= f.text_field :arms , :class => 'form-control boxed',placeholder: "Arms (#{length_unit})" %></div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-4">
          <div class="form-group row">
            <%= f.label :forearms , :class => 'col-sm-4 form-control-label text-xs-center' do %>
              <%= image_tag("forearm.jpg", alt: "waist") %>
              <p>Forearms (<%= length_unit %>)</p>
            <% end %>
            <div class="col-sm-8"><%= f.text_field :forearms , :class => 'form-control boxed',placeholder: "Forearms (#{length_unit})" %></div>
          </div>
        </div>
        <div class="col-sm-4">
          <div class="form-group row">
            <%= f.label :shoulders , :class => 'col-sm-4 form-control-label text-xs-center' do %>
              <%= image_tag("shoulder.jpg", alt: "Shoulder") %>
